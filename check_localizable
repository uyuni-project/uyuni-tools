grep -r . --include '*.go' --exclude '*_test.go' -n \
    -e 'fmt\.Errorf("[^"]\+"' \
    -e 'errors.New("[^"]\+"' \
    -e '\(Fatal\|Error\|Info\|Warn\)()\(\.Err(err)\)\?\.Msgf\?("' \
    -e '\.Flags()\.\(String\|Int\|Bool\)\(Slice\)\?\(Var\)\?P\?([^)]\+, \+"[^"]\+")' \
    -e '\(Short\|Long\): \+["`]'

if test $? -eq 0; then
    echo "Fix the non localizable strings"
    exit 1
fi
