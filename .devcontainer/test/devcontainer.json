{
  "name": "uyuni-tools-devcontainer-e2e-tests",
  "build": {
    "dockerfile": "Dockerfile"
  },
  "runArgs": [
    "--rm",
    "--privileged",
    "--cgroupns=host",
    "-v", "/sys/fs/cgroup:/sys/fs/cgroup:rw",
    "--cap-add", "NET_RAW",
    "--tmpfs", "/run",
    "--hostname", "uyuni-testbed.mgr.internal",
    "--name", "uyuni-tools-devcontainer-e2e-tests"
  ],
  "containerEnv": {
    "container": "docker"
  },
  "remoteUser": "root",
  "overrideCommand": false,
  "customizations": {
    "vscode": {
      "extensions": [
        "golang.Go"
      ],
      "settings": {
        "terminal.integrated.shell.linux": "/bin/bash"
      }
    }
  },
  "workspaceFolder": "/workspace"
}
